    <ul class='item-lists'>
     <%# 商品がある場合表示し、商品がない場合はダミー商品を表示するための条件分岐 %>
     <% if @items.present? %>
      <% @items.each do |item| %>
        <li class='list'>
          <%= link_to item_path(item.id) do %>
          <div class='item-img-content'>
            <%= image_tag item.image, class: "item-img" %>

            <% if item.order.present? %>
             <div class='sold-out'>
             <span>Sold Out!!</span>
            </div>
            <% end %>

          </div>
          <div class='item-info'>
            <h3 class='item-name'>
              <%= item.name %>
            </h3>
            <div class='item-price'>
              <span><%= item.price %>円<br><%= item.fee.name %></span>
              <div class='star-btn'>
                <%= image_tag "star.png", class:"star-icon" %>
                <span class='star-count'>0</span>
              </div>
            </div>
          </div>
        <% end %>
      </li>
      <% end %>
     <% else %>
        <div class="list-none">該当する出品が見つかりませんでした</div>
     <% end %>

    </ul>